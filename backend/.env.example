# Server Configuration
PORT=5000
HOST=localhost
NODE_ENV=development

# Database Configuration
DATABASE_HOST=your_database_host
DATABASE_PORT=your_database_port
DATABASE_USER=your_database_username
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=your_database_name
DB_POOL_SIZE=10

# API Keys
DEFI_PULSE_API_KEY=your_defi_pulse_api_key_here
INFURA_PROJECT_ID=INFURA_PROJECT_ID
# Cron Jobs Configuration
CRON_HOURLY_APY=0 * * * *  # Run every hour
CRON_MONTHLY_REBALANCE=0 0 1 * *  # Run at midnight on the first day of each month

# Logging
LOG_LEVEL=info

# Frontend Configuration
REACT_APP_BACKEND_API_URL=http://localhost:5000
REACT_APP_TRADINGVIEW_LIBRARY_PATH=/charting_library/

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=1d

# External Services
ETHERSCAN_API_KEY=your_etherscan_api_key_here
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# Feature Flags
ENABLE_HISTORICAL_SIMULATION=true
ENABLE_DEPTH_SIMULATION=true
